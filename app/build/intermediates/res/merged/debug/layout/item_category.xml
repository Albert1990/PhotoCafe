<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <com.brain_socket.photocafe.view.RoundedImageView
        android:id="@+id/ivCategory"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_rounded_category_bg"
        android:padding="20dp"
        android:src="@drawable/ic_carousel"/>

    <com.brain_socket.photocafe.view.TextViewCustomFont
        android:id="@+id/tvCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/ts_text_big"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:paddingTop="7dp"
        android:textColor="@color/txt_light_yellow"
        android:text="---"
        app:fontId="1"/>

</LinearLayout>