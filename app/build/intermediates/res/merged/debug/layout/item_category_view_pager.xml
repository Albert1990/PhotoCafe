<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">


    <com.brain_socket.photocafe.view.RoundedImageView
        android:id="@+id/ivCategory"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_rounded_category_dark_bg"
        android:padding="15dp"
        android:src="@drawable/ic_carousel"/>

    <com.brain_socket.photocafe.view.TextViewCustomFont
        android:id="@+id/tvCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/ts_text_normal"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:paddingTop="5dp"
        android:textColor="@color/txt_brown_dark"
        android:text="---"
        app:fontId="1"/>

</LinearLayout>