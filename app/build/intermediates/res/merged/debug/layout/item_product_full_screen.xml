<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivProduct"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/home_title_decoration"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:padding="10dp"
        android:background="@color/black">

        <com.brain_socket.photocafe.view.TextViewCustomFont
            android:id="@+id/tvProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/ts_text_normal"
            android:textColor="@color/txt_light_yellow"
            app:fontId="1"/>

        <com.brain_socket.photocafe.view.TextViewCustomFont
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/ts_text_normal"
            android:textColor="@color/txt_light_yellow"
            app:fontId="1"/>

        <com.brain_socket.photocafe.view.TextViewCustomFont
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tvProduct"
            android:layout_marginTop="15dp"
            android:textSize="@dimen/ts_text_small"
            android:textColor="@color/txt_white"
            app:fontId="1"/>

        <ImageView
            android:id="@+id/ivAdd"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tvDescription"
            android:src="@drawable/btn_add"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|right"
        android:layout_margin="15dp"
        android:src="@drawable/decoration_cam"/>

</FrameLayout>