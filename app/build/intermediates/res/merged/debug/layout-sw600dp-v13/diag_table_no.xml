<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="15dp">

    <com.brain_socket.photocafe.view.TextViewCustomFont
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/diag_table_no_header"
        android:textColor="@color/txt_light_yellow"
        android:textSize="@dimen/ts_text_normal"
        app:fontId="1"/>

    <com.brain_socket.photocafe.view.EditTextCustomFont
        android:id="@+id/etTableNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:hint="@string/diag_table_no_field_hint"
        android:inputType="number"
        android:textColor="@color/txt_light_yellow"
        android:textSize="@dimen/ts_text_normal"
        app:fontId="1"/>

    <com.brain_socket.photocafe.view.EditTextCustomFont
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:textSize="@dimen/ts_text_normal"
        android:textColor="@color/txt_light_yellow"
        android:hint="@string/diag_table_password"
        app:fontId="1"/>

    <com.brain_socket.photocafe.view.TextViewCustomFont
        android:id="@+id/tvProceed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_submit_button_bg"
        android:gravity="center"
        android:padding="6dp"
        android:text="@string/diag_table_no_btn_proceed"
        android:textColor="@color/txt_white"
        android:textSize="@dimen/ts_text_normal"
        app:fontId="1"/>

</LinearLayout>