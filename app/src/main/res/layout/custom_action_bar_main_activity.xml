<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/brown_dark">


    <com.brain_socket.photocafe.view.TextViewCustomFont
        android:id="@+id/tvCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Category"
        android:gravity="center_horizontal"
        android:layout_marginLeft="110dp"
        android:layout_marginRight="110dp"
        android:textColor="@color/txt_light_yellow"
        android:textSize="@dimen/ts_title_big"
        android:maxLines="1"
        android:lines="1"
        android:background="#443333"
        app:fontId="3"/>

    <com.brain_socket.photocafe.view.TextViewCustomFont
        android:id="@+id/btnEnglish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:text="@string/activity_language_select_btn_english"
        android:textColor="@color/txt_white"
        android:textSize="@dimen/ts_text_normal"
        app:fontId="1"/>

    <com.brain_socket.photocafe.view.TextViewCustomFont
        android:id="@+id/btnArabic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="14dp"
        android:padding="5dp"
        android:text="@string/activity_language_select_btn_arabic"
        android:textColor="@color/txt_white"
        android:textSize="@dimen/ts_text_normal"
        app:fontId="1"/>

    <ImageView
        android:id="@+id/ivViewType"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="8dp"
        android:padding="5dp"
        android:layout_toLeftOf="@id/btnEnglish"
        android:layout_toStartOf="@id/btnEnglish"
        android:src="@drawable/ic_carousel"/>

</RelativeLayout>
